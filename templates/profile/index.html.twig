{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="bg-white h-screen bg-gray-300 ">
        <div class="container flex justify-center py-20">
            <div class="p-3 bg-white rounded-xl max-w-lg hover:shadow rounded-lg shadow">
                <div class="flex justify-between w-full">
                    <img width="150" class="rounded-lg">
                    <div class="ml-2">
                        <div class="p-3">
                            <h3 class="text-2xl">{{ app.user.firstName }} {{ app.user.lastName }}</h3>
                            <span class="text-gray-400">{{ app.user.birthDate.format('d-m-Y') }}</span>
                        </div>
                        <div class="flex justify-between items-center p-3 bg-gray-200 rounded-lg">
                            <div class="mr-3">
                                <span class="text-gray-400 block">Notes</span>
                                <span class="font-bold text-black text-xl">34</span>
                            </div>
                            <div class="mr-3">
                                <span class="text-gray-400 block">Notes</span>
                                <span class="font-bold text-black text-xl">940</span>
                            </div>
                            <div>
                                <span class="text-gray-400 block">Appartements</span>
                                <span class="font-bold text-black text-xl">8.9</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex justify-between items-center mt-2 gap-2">
                    <button href="" class="w-full h-12 rounded-md bg-blue-700 text-white text-md hover:shadow hover:bg-blue-800">
                        Modifier
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
