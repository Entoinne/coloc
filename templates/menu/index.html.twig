{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <div class="isolate bg-white">
        <div class="px-6 pt-6 lg:px-8">
            <nav class="flex items-center justify-between" aria-label="Global">
                <div class="flex lg:flex-1">
                    <a href={{ path('app_acceuil') }} class="-m-1.5 p-1.5">
                    <span class="sr-only">Your Company</span>
                    <img class="h-8" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="">
                    </a>
                </div>
                <div class="flex lg:hidden">
                    <button type="button"
                            class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                        <span class="sr-only">Open main menu</span>
                        <!-- Heroicon name: outline/bars-3 -->
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                        </svg>
                    </button>
                </div>
                <div class="hidden lg:flex lg:gap-x-12">
                    {% if app.user %}
                        {% if is_granted('ROLE_OWNER') %}
                            <a href={{ path('owner_appartement',{owner:app.user.id}) }} class="text-sm font-semibold
                               leading-6
                               text-gray-900">Mes appartements</a>
                        {% else %}
                            <a href={{ path('app_appartement') }} class="text-sm font-semibold leading-6
                               text-gray-900">Les appartements</a>
                        {% endif %}
                        <a href={{ path('app_profile') }} class="text-sm font-semibold leading-6
                           text-gray-900">Mon profil</a>

                        <div class="mb-3">
                            Bonjour {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                        </div>
                    {% else %}
                        <a href={{ path('app_information') }} class="text-sm font-semibold leading-6
                           text-gray-900">Informations</a>
                        <a href={{ path('app_contact') }} class="text-sm font-semibold leading-6
                           text-gray-900">Contacts</a>
                        <div class="hidden lg:flex lg:flex-1 lg:justify-end">
                            <a href={{ path('app_login') }} class="text-sm font-semibold leading-6 text-gray-900">Connexion
                            <span aria-hidden="true">&rarr;</span></a>
                        </div>
                    {% endif %}
                </div>
            </nav>
        </div>
    </div>
    <hr>
{% endblock %}